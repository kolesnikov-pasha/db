<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity"
    tools:showIn="@layout/activity_auth">


    <android.support.design.widget.TextInputLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qwe">
        <EditText android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/et_email"
            android:inputType="textEmailAddress"
            android:hint="Email"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_alignLeft="@+id/qwe"
        android:layout_alignStart="@+id/qwe"
        android:layout_below="@+id/qwe"
        android:id="@+id/qwe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:singleLine="false" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Авторизация"
        android:background="@drawable/accent_button_background"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/qwe1"
        android:id="@+id/btn_sign_in"/>

    <TextView
        android:id="@+id/btn_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:clickable="true"
        android:text="@string/registration"
        android:textColor="#000"
        android:textStyle="normal" />

</RelativeLayout>
